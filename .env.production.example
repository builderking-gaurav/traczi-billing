# Production Environment Variables
# Copy this file to .env.production and fill in your values

# Server Configuration
PORT=4000
NODE_ENV=production

# Stripe Configuration (LIVE MODE - NOT TEST MODE!)
STRIPE_SECRET_KEY=sk_live_your_live_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_live_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_signing_secret_here

# Stripe Price IDs (Get these from Stripe Dashboard â†’ Products)
# Create your products in LIVE mode and copy the price IDs
STRIPE_PRICE_TEST=price_xxxxxxxxxxxxx
STRIPE_PRICE_BASIC=price_xxxxxxxxxxxxx
STRIPE_PRICE_MODERATE=price_xxxxxxxxxxxxx
STRIPE_PRICE_ADVANCE=price_xxxxxxxxxxxxx

# Traccar Configuration
TRACCAR_BASE_URL=https://api.traczi.com
TRACCAR_ADMIN_EMAIL=your_traccar_admin@email.com
TRACCAR_ADMIN_PASSWORD=your_strong_traccar_password

# Frontend Configuration
# Update these after deploying your frontend
FRONTEND_URL=https://your-domain.com
SUCCESS_URL=https://your-domain.com/registration-success
CANCEL_URL=https://your-domain.com/register

# Security
# Add all your frontend domains (comma-separated)
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com
